name: Get
format: "1.0"
host: https://httpbin.org
tags:
  - working

steps:

  - description: Get call with no parameters

    request:
        path: get

    validate:
      - expect: https://httpbin.org/get
        actual: '{response.url}'
      - expect: {}
        actual: '{response.args}'
      - expect: "*/*"
        actual: '{response.headers.Accept}'
      - expect: close
        actual: '{response.headers.Connection}'
      - expect: 'Token GUEST-TOKEN'
        actual: '{response.headers.Authorization}'

  - description: Get and validate using transform

    request:
        path: get
        params:
            one: 1
            two: 2
            three: 2017-01-01

    transform: >
        {{
            host: headers.Host,
            keys: reverse(sort(keys(args)))
        }}

    validate:
      - actual: '{transform}'
        expect:
            host: httpbin.org
            keys:
                - two
                - three
                - one
